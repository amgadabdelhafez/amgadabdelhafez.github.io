<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.skipintro"
       name="Skip Intro Addon"
       version="1.2.6"
       provider-name="Amgad Abdelhafez">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>

    <extension point="xbmc.service" library="default.py">
        <provides>video</provides>
    </extension>
    
    <extension point="plugin.video.skipintro" name="Skip Intro Addon">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/amgadabdelhafez/repository.skipintro/master/repo/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/amgadabdelhafez/repository.skipintro/master/repo/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/amgadabdelhafez/repository.skipintro/master/repo/zips/</datadir>
        </dir>
    </extension>

    <extension point="plugin.video.skipintro">
        <summary lang="en">Skip intros/credits in tv shows.</summary>
        <description lang="en">This add-on reads bookmarks, subtitles, or prompts after a configurable delay to skip intros during playback.</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>